<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Username!"
        android:textSize="24sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="32dp"/>

    <Button
        android:id="@+id/buttonOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order History"
        android:layout_below="@id/textViewWelcome"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/buttonViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Cart"
        android:layout_below="@id/buttonOrderHistory"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/buttonBrowseFlowers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Flowers"
        android:layout_below="@id/buttonViewCart"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/buttonAdminPortal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access Admin Portal"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_below="@id/buttonBrowseFlowers"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/buttonAdminPortal"
        android:layout_marginHorizontal="16dp"/>

</RelativeLayout>
